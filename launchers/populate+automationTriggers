set -e

if [ $# -lt 1 ]
then
  SANDBOX_PORT=6865
else
  SANDBOX_PORT="${1}"
fi

cd scripts

pipenv run ./populate.py "$SANDBOX_PORT"
echo "DAML script executed"

pipenv run ./startTriggers.py "$SANDBOX_PORT"
